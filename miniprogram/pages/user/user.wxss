/* pages/user/user.wxss */
.bg{
  /* background-color: #96D7ED; */
  position: absolute;
  left:0;
  right: 0;
  top: 0;
  text-align: right;
  height: var(--size205);
  z-index: -1;
}
.bg image {
  width: 100%;
}

.user{
  display: flex;
  align-items: center;

 
}

.user-info{
  height: 150rpx;
  border:1px solid #b4b5b6;
  border-left: none;
  border-right: none;
  display: flex;
  align-items: center;
  margin-top:200rpx;
}

.user-info image{
  
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 10rpx;
}

.user-info text{
  margin-left: 20rpx;
}

.user-info button{
  width: 150rpx;
  padding-left: 0;
  padding-right: 0;
  margin:0;
  margin-left: 10rpx;
}

.user-info button :last-child{
 color: red;
}

.user-list{
  margin-top: 40rpx;
}

.user-list-item{
  height: 50rpx;
  border-bottom: 1px dashed #b4b5b6 ;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}