<!--pages/detail/detail.wxml-->
<view class="detail">
	<button wx:if="{{isFriend}}">已是好友</button>
	<button wx:else>添加好友</button>

	<view class="detail-item">
		<text>昵称: </text>
		<text>{{detail.nickName}}</text>
	</view>
	<view class="detail-item">
		<text>头像: </text>
		<image src="{{detail.userPhoto}}"></image>
	</view>
	<view class="detail-item">
		<text>个性签名: </text>
		<text>{{detail.signature}}</text>
	</view>

	<view wx:if='{{isFriend}}' class="detail-item">
		<text>手机号: </text>
		<text>{{detail.phoneNumber}}</text>
		<call-phone  phoneNubmer='{{detail.phoneNumber}}'/>
	</view>
	<view wx:if='{{isFriend}}' class="detail-item">
		<text>微信号: </text>
		<text>{{detail.weixinNumber}}</text>
    <copy-text copyText='{{detail.weixinNumber}}'/>
	</view>
</view>