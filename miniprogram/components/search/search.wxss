/* components/search/search.wxss */
.container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  z-index: 9999;
  overflow: hidden;
}

.containerFouce {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 9999;
  overflow: hidden;
  background-color: #ccc;
}

.search {
  display: flex;
  align-items: center;
  height: 100rpx;
  width: calc(100vw - 20rpx);
  margin: 0 10rpx;
}

.search-text {
  display: flex;
  align-items: center;
  flex: 1;
  border: 1px solid #b4b5b6;
  border-radius: 10rpx;
  height: 60rpx;
  background: white;
}

.search-text .iconsearch {
  margin: 0 10rpx;
}

.search-text input {
  flex: 1;
}

.search-text .iconchahao {
  margin: 0 10rpx;
}

.search-cancel {
  margin: 0 10rpx;
}

.search-history {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx;
  margin-bottom: 10rpx;
}

.search-history-btn {
  display: flex;
  flex-direction: row;
  /* 多行 */
  flex-wrap: wrap;
}

.search-history-btn text {
  background-color: white;
  border: 1px solid #b4b5b6;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  margin: 10rpx;
}

.searchList-item {
  height: 50rp;
  border-bottom: 1px dashed #b4b5b6;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.searchList-item view {
  display: flex;

  align-items: center;
}

.searchList-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}