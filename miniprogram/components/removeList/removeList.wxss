/* components/removeList/removeList.wxss */
.area {
  width: calc(100% - 40rpx);
  height: 100rpx;
  margin: 20rpx;
  position: relative;
  border-bottom: 1rpx solid #b4b5b6;
}

.view {
  width: calc(100% - 100rpx);
  height: 100rpx;
  position: absolute;
  left: 100rpx;
  top: 0;
  /* 当height=line-height 将内容居中 */
  line-height: 100rpx;
  /* 文字缩进 */
  text-indent: 10rpx;
  z-index: 2;
  background: #F6F6F6;
}

image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  /* 拥有更高堆叠顺序的元素总是会处于堆叠顺序较低的元素的前面 */
  z-index: 1;
}

.delete {
  width: 100rpx;
  height: 100rpx;
  background: red;
  color: white;
  position: absolute;
  text-align: center;
  line-height: 100rpx;
  right: 0;
  top: 0;
  z-index: 1;
}